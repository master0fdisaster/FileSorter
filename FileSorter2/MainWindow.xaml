<Window x:Class="FileSorter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileSorter"
        xmlns:converters="clr-namespace:WPF.Common.Converters;assembly=WPF.Common"
        xmlns:commands="clr-namespace:WPF.Common.Commands;assembly=WPF.Common"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        d:DataContext="{d:DesignData Type=local:MainViewModel, IsDesignTimeCreatable=True}">

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="200"/>
        </Style>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="Left" 
                    Command="{Binding Commands.GoToPreviousCommand}"/>
        <KeyBinding Key="Delete"
                    Command="{Binding Commands.DeleteFileCommand}" 
                    CommandParameter="{Binding CurrentFile}"/>
        <KeyBinding Key="Right"
                    Command="{Binding Commands.GoToNextCommand}"/>
    </Window.InputBindings>
    
    
    
    <DockPanel LastChildFill="True" Background="Transparent">
        
        <Border DockPanel.Dock="Bottom" Background="Red" Height="30" MaxHeight="100">
            <DockPanel>
                <Button Content="X" DockPanel.Dock="Right" Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}">
                </Button>
                <TextBlock Text="{Binding Path=Exception.Message}" Foreground="Black" FontSize="20" FontWeight="Bold"/>
                
            </DockPanel>
            
        </Border>
        
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="3">
            <Label Content="TargetFolder"/>
            <TextBox Text="{Binding TargetFoldersFolder, Mode=TwoWay, Delay=300, UpdateSourceTrigger=PropertyChanged}" 
                     />


            <Label Content="SourceFolder"/>
            <TextBox Text="{Binding SourceFolder, Mode=TwoWay, Delay=300, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <Expander DockPanel.Dock="Left" ExpandDirection="Right" IsExpanded="True">
            <StackPanel Orientation="Horizontal" >
                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding TargetFolders}"/>
                </ScrollViewer>
                <ListBox x:Name="folders"  ItemsSource="{Binding FilteredTargets}" SelectedItem="{Binding CurrentTargetFolder}"/>
            </StackPanel>
        </Expander>
        
        <Expander DockPanel.Dock="Right" ExpandDirection="Left" IsExpanded="False" MaxWidth="200">
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding Files}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Height="40" Width="40">
                                <Image x:Name="img"  MaxHeight="40" MaxWidth="40" Focusable="True" IsHitTestVisible="True"
                                    Source="{Binding Converter={StaticResource fileInfoToImage}}">
                                </Image>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Expander>

 



        <DockPanel Background="LightGray" >


            <Grid DockPanel.Dock="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button 
                    Content="Left" Grid.Column="0" 
                    Command="{Binding Commands.GoToPreviousCommand}"/>
                <Button 
                    Content="Right" Grid.Column="1" 
                    Command="{Binding Commands.GoToNextCommand}"/>
                <Button 
                    Content="Delete" Grid.Column="2" 
                    Command="{Binding Commands.DeleteFileCommand}" 
                    CommandParameter="{Binding CurrentFile}"/>
                <Button 
                    Grid.Column="3"
                    Content="Show In File Explorer"
                    Command="{Binding Commands.OpenInExplorerCommand}"
                    CommandParameter="{Binding CurrentFile}"/>

            </Grid>

            <Border DockPanel.Dock="Bottom" Height="30">
                <TextBox Text="{Binding SearchText, Mode=TwoWay, Delay=100, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.InputBindings>
                        
                        <KeyBinding Key="Up">
                            <KeyBinding.Command>
                                <commands:ListBoxNavigationCommand ListBox="{x:Reference Name=folders}" Direction="Previous" />
                            </KeyBinding.Command>
                        </KeyBinding>
                        
                        <KeyBinding Key="Down">
                            <KeyBinding.Command>
                                <commands:ListBoxNavigationCommand ListBox="{x:Reference Name=folders}" Direction="Next" />
                            </KeyBinding.Command>
                        </KeyBinding>
                        
                        <KeyBinding Key="Return" Command="{Binding Commands.OnEnterCommand}"/>
                        <KeyBinding Key="Return" Modifiers="Shift" Command="{Binding Commands.CreateNewFolderFromSearchCommand}"/>
                        <KeyBinding Key="Right" Modifiers="Shift" Command="{Binding Commands.GoToNextCommand}"/>
                        <KeyBinding Key="Left" Modifiers="Shift" Command="{Binding Commands.GoToPreviousCommand}"/>
                        <KeyBinding Key="Delete" Modifiers="Shift" Command="{Binding Commands.DeleteFileCommand}" 
                                    CommandParameter="{Binding CurrentFile}"/>


                    </TextBox.InputBindings>
                </TextBox>
            </Border>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Label FontSize="80" Content="{Binding CurrentTargetFolder}" HorizontalAlignment="Center"/>
                <Image MaxHeight="800" Focusable="True" IsHitTestVisible="True"
                       Source="{Binding CurrentFile, Converter={StaticResource fileInfoToImage}}"/>
                <Label Content="{Binding CurrentFile.Name}" HorizontalAlignment="Center" DockPanel.Dock="Bottom"/>
                
            </StackPanel>
        </DockPanel>


            
    </DockPanel>
</Window>
